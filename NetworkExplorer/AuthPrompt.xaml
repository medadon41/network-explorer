<Window x:Class="NetworkExplorer.AuthPrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetworkExplorer"
        mc:Ignorable="d"
        Title="CLI Auth" Height="350" Width="250"
        ResizeMode="NoResize">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Height="25" Margin="0,29,0,0" TextWrapping="Wrap" Text="Login to KeeneticOS CLI" VerticalAlignment="Top" Width="181" FontSize="16" FontFamily="Microsoft JhengHei"/>
        <TextBox x:Name="LoginInput" HorizontalAlignment="Center" Margin="0,92,0,0" TextWrapping="Wrap" Text="Login" VerticalAlignment="Top" Width="180"/>
        <TextBox x:Name="PasswordInput" HorizontalAlignment="Center" Margin="0,117,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="180"/>
        <Button Content="Login" HorizontalAlignment="Center" Margin="0,151,0,0" VerticalAlignment="Top" Width="109" Click="Button_Click"/>

    </Grid>
</Window>
